@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Movie == null ? "New" : "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string formName = string.Format("{0} Movie", Model.Movie == null ? "New" : "Edit");
}

<h2>@formName</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Release Date</label>
        @Html.TextBoxFor(m => m.Movie.ReleaseDate,
                        "{0:dd/MM/yyyy}",
                        new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="DateAdded">Date Added</label>
        @Html.TextBoxFor(m => m.Movie.DateAdded,
                        "{0:dd/MM/yyyy}",
                        new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="GenreId">Genre</label>
        @Html.DropDownListFor(m => m.Movie.GenreId,
                              new SelectList(Model.Genres, "Id", "Name"),
                              "Select a Genre",
                              new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="NumberInStock">Number in Stock</label>
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button> 
}

